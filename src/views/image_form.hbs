<div class="row">
  <div class="col-md-4">
    <div class="card mt-4">
      <div class="card-body">
        <form action="/images/add" enctype="multipart/form-data" method="POST">
          <div class="form-group"><input type="text" name="title" class="form-control" placeholder="Image Title" autofocus></div>
          <div class="form-group"><textarea name="description" rows="4" placeholder="Image Description" class="form-control"></textarea></div>
          <div class="input-group mb-3">
            <div class="custom-file"><input type="file" class="custom-file-input" name="image" id="inputGroupFile01"></div>
            <label for="inputGroupFile01" class="custom-file-label">Choose File</label>
          </div>
          <button class="btn btn-primary btn-block">Upload Photo</button>
        </form>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <table class="table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Operations</th>
        </tr>
      </thead>
      <tbody>
        {{#each photos}}
          <tr>
            <td>{{title}}</td>
            <td>{{description}}</td>
            <td>
              <a href="{{imageURL}}" target="blank" class="btn btn-primary">View</a>
              <a href="/images/delete/{{_id}}" class="btn btn-danger">Delete</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
